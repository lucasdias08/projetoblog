<%- include("../../partials/head.ejs") %>
<%- include("../../partials/navbar.ejs") %>
<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a class="btn btn-success" href="categories/new">Criar nova categoria</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        
            <% categories.forEach(category => { %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title %></th>
                    <th><%= category.slug %></th>
                    <th>
                        <a class="btn btn-warning" href="/admin/categories/edit/<%= category.id %>">Editar</a>
                        <form method="POST" action="/categories/delete" onsubmit="confirmarDelecao(event, this)" style="display: inline;">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-danger">Deletar</butto>
                        </form>
                        
                    </th>
                </tr>        
            <% }) %>
        </tbody>
    </table>
</div>
<%- include("../../partials/footer.ejs") %>
<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decision = confirm("Você quer deletar esta categoria?");
        if(decision){
            form.submit()
        } else {
            console.log("não quero deletar")
        }
    }
</script>